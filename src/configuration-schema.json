{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "required": ["appearance", "modules"],
  "properties": {
    "appearance": {
      "type": "object",
      "required": ["theme", "highlightResults"],
      "additionalProperties": false,
      "properties": {
        "theme": {
          "type": "string",
          "default": "system",
          "enum": ["system", "dark", "light"]
        },
        "highlightResults": {
          "type": "boolean",
          "default": true
        }
      },
      "default": {}
    },
    "shortcuts": {
      "type": "object",
      "additionalProperties": true,
      "default": {},
      "properties": {
        "focusApp": {
          "description": "Open and focus the application",
          "type": "string",
          "default": "CommandOrControl+Shift+Space"
        },
        "focusSearchBar": {
          "description": "Focus the search bar",
          "type": "string",
          "default": "/"
        },
        "toggleHighlighting": {
          "description": "Toggle search term highlighting",
          "type": "string",
          "default": "CommandOrControl+i"
        },
        "openSettings": {
          "description": "Open the settings",
          "type": "string",
          "default": "CommandOrControl+,"
        },
        "close": {
          "description": "Close sidebar, settings, modal, etc.",
          "type": "string",
          "default": "Escape"
        }
      }
    },
    "modules": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "required": ["moduleType", "enabled", "id", "name", "url", "username", "password"],
            "additionalProperties": false,
            "properties": {
              "moduleType": {
                "const": "confluence"
              },
              "id": {
                "type": "string",
                "default": "confluence",
                "format": "uuid"
              },
              "name": {
                "type": "string",
                "default": "Confluence"
              },
              "enabled": {
                "type": "boolean",
                "default": true
              },
              "url": {
                "type": "string",
                "title": "URL",
                "default": "",
                "examples": ["https://confluence.domain.com"]
              },
              "username": {
                "type": "string",
                "title": "Username",
                "default": ""
              },
              "password": {
                "title": "Password",
                "type": "string",
                "default": "",
                "x-component": "password"
              },
              "filter": {
                "title": "Filter",
                "type": "string",
                "default": ""
              },
              "pageSize": {
                "title": "Number of results per page",
                "type": "integer",
                "default": 5,
                "minimum": 1,
                "maximum": 50
              }
            }
          },
          {
            "type": "object",
            "required": ["moduleType", "enabled", "id", "name", "clientId"],
            "additionalProperties": false,
            "properties": {
              "moduleType": {
                "const": "drive"
              },
              "id": {
                "type": "string",
                "default": "drive",
                "format": "uuid"
              },
              "name": {
                "type": "string",
                "default": "Google Drive"
              },
              "enabled": {
                "type": "boolean",
                "default": true
              },
              "clientId": {
                "title": "Client ID",
                "type": "string",
                "default": ""
              },
              "apiKey": {
                "type": "string",
                "default": "",
                "x-component": "password"
              },
              "pageSize": {
                "title": "Number of results per page",
                "type": "integer",
                "default": 5,
                "minimum": 1,
                "maximum": 50
              },
              "refreshToken": {
                "type": "string",
                "default": ""
              },
              "accessToken": {
                "type": "string",
                "default": ""
              }
            }
          },
          {
            "type": "object",
            "required": ["moduleType", "enabled", "id", "name", "token"],
            "additionalProperties": false,
            "properties": {
              "moduleType": {
                "const": "paper"
              },
              "id": {
                "type": "string",
                "default": "paper",
                "format": "uuid"
              },
              "name": {
                "type": "string",
                "default": "Dropbox Paper"
              },
              "enabled": {
                "type": "boolean",
                "default": true
              },
              "token": {
                "title": "API Token",
                "type": "string",
                "default": "",
                "x-component": "password"
              },
              "pageSize": {
                "title": "Number of results per page",
                "type": "integer",
                "default": 5,
                "minimum": 1,
                "maximum": 50
              }
            }
          },
          {
            "type": "object",
            "required": ["moduleType", "enabled", "id", "name", "url", "username", "password"],
            "additionalProperties": false,
            "properties": {
              "moduleType": {
                "const": "jira"
              },
              "id": {
                "type": "string",
                "default": "jira",
                "format": "uuid"
              },
              "name": {
                "type": "string",
                "default": "JIRA"
              },
              "enabled": {
                "type": "boolean",
                "default": true
              },
              "url": {
                "title": "URL",
                "type": "string",
                "default": "",
                "examples": ["https://jira.domain.com"]
              },
              "username": {
                "title": "Username",
                "type": "string",
                "default": ""
              },
              "password": {
                "title": "Password",
                "type": "string",
                "default": "",
                "x-component": "password"
              },
              "pageSize": {
                "title": "Number of results per page",
                "type": "integer",
                "default": 5,
                "minimum": 1,
                "maximum": 50
              }
            }
          },
          {
            "type": "object",
            "required": ["moduleType", "enabled", "id", "name", "token"],
            "additionalProperties": false,
            "properties": {
              "moduleType": {
                "const": "phab-revision"
              },
              "id": {
                "type": "string",
                "default": "phab-revision",
                "format": "uuid"
              },
              "name": {
                "type": "string",
                "default": "Phabricator"
              },
              "enabled": {
                "type": "boolean",
                "default": true
              },
              "url": {
                "title": "URL",
                "type": "string",
                "default": "",
                "examples": ["https://phabricator.domain.com"]
              },
              "token": {
                "title": "API Token",
                "type": "string",
                "default": "",
                "x-component": "password"
              },
              "pageSize": {
                "title": "Number of results per page",
                "type": "integer",
                "default": 5,
                "minimum": 1,
                "maximum": 50
              }
            }
          },
          {
            "type": "object",
            "required": ["moduleType", "enabled", "id", "name", "token"],
            "additionalProperties": false,
            "properties": {
              "moduleType": {
                "const": "slack"
              },
              "id": {
                "type": "string",
                "default": "slack",
                "format": "uuid"
              },
              "name": {
                "type": "string",
                "default": "Slack"
              },
              "enabled": {
                "type": "boolean",
                "default": true
              },
              "token": {
                "title": "API Token",
                "type": "string",
                "default": "",
                "x-component": "password"
              },
              "pageSize": {
                "title": "Number of results per page",
                "type": "integer",
                "default": 5,
                "minimum": 1,
                "maximum": 50
              }
            }
          }
        ]
      },
      "default": []
    }
  }
}
